<h1>Login</h1>

  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
  
<form action="/login" method="POST">
    <label>Username
        <input type="text" name="username"></input> 
    </label>
    <label>Password
        <input type="password" name="password"></input> 
    </label>
    <button>Login</button>    
</form>